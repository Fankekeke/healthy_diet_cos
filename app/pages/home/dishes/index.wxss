/**/
.dishes-selection-container {
    padding: 20rpx;
}

.dish-item {
    margin-bottom: 30rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
}

.dish-content {
    background: #fff;
}

.dish-header {
    padding: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.dish-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.dish-creator {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}

.dish-details {
    display: flex;
    padding: 20rpx;
}

.dish-image {
    width: 200rpx;
    height: 160rpx;
    border-radius: 12rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.dish-image image {
    width: 100%;
    height: 100%;
}

.dish-info {
    flex: 1;
}

.nutrient-info {
    margin-bottom: 15rpx;
}

.nutrient-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
}

.nutrient-label {
    font-size: 24rpx;
    color: #666;
}

.nutrient-value {
    font-size: 24rpx;
    font-weight: bold;
    color: #333;
}

.dish-tags {
    display: flex;
}

.tag {
    font-size: 20rpx;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    margin-right: 10rpx;
}

.taste-tag {
    background-color: #ffebee;
    color: #e91e63;
}

.portion-tag {
    background-color: #e8f5e9;
    color: #4caf50;
}

.dish-actions {
    padding: 20rpx;
    text-align: center;
    border-top: 1rpx solid #f0f0f0;
}

.selected-dishes-container {
    padding: 20rpx;
}

.selected-dish-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.dish-summary {
    display: flex;
    align-items: center;
}

.dish-name {
    font-size: 28rpx;
    color: #333;
    margin-right: 20rpx;
}

.dish-calories {
    font-size: 24rpx;
    color: #fa541c;
}

.total-nutrition {
    padding: 20rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
    margin: 20rpx 0;
}

.total-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15rpx;
}

.total-label {
    font-size: 26rpx;
    color: #333;
}

.total-value {
    font-size: 26rpx;
    font-weight: bold;
    color: #1890ff;
}

.submit-section {
    padding: 20rpx 0;
}
