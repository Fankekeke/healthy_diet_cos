    padding: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.sport-summary {
    display: flex;
    flex-direction: column;
}

.sport-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
}

.sport-meta-inline {
    display: flex;
}

.sport-calories {
    font-size: 24rpx;
    color: #fa541c;
    margin-right: 15rpx;
}

.sport-duration {
    font-size: 24rpx;
    color: #1890ff;
}

.total-calories {
    padding: 20rpx;
    background: #f8f9fa;
