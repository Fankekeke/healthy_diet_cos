.sport-selection-container {
    padding: 20rpx;
}

.sport-item {
    margin-bottom: 30rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
}

.sport-content {
    background: #fff;
}

.sport-header {
    padding: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.sport-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.sport-details {
    display: flex;
    padding: 20rpx;
}

.sport-image {
    width: 200rpx;
    height: 160rpx;
    border-radius: 12rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.sport-image image {
    width: 100%;
    height: 100%;
}

.sport-info {
    flex: 1;
}

.sport-meta {
    margin-bottom: 15rpx;
}

.meta-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
}

.meta-label {
    font-size: 24rpx;
    color: #666;
}

.meta-value {
    font-size: 24rpx;
    font-weight: bold;
    color: #333;
}

.sport-description {
    margin-top: 10rpx;
}

.description-text {
    font-size: 22rpx;
    color: #999;
}

.sport-actions {
    padding: 20rpx;
    text-align: center;
    border-top: 1rpx solid #f0f0f0;
}

.selected-sports-container {
    padding: 20rpx;
}

.selected-sport-item {
    display: flex;
    justify-content: space-between;
